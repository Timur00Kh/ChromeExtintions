{
  "manifest_version": 2,

  "name": "ImageSearcher",
  "description": "Поиск по картинке",
  "version": "1.0",

  "browser_action": {
    //"default_icon": "slon.png",
    "default_popup": "popup.html"
  },
  
  "permissions": [
    "contextMenus",
    "storage",
    "tabs"
  ],

  "background": {
    "scripts": ["example.js"]
  },

  "icons": {  "16": "Images/icons/icon16.png",
              "48": "Images/icons/icon48.png",
             "128": "Images/icons/icon128.png" },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["starter.js"]
    }
  ]
}