{
  "manifest_version": 2,

  "name": "ImageSearcher",
  "description": "Поиск по картинке",
  "version": "1.0",

  "browser_action": {
    //"default_icon": "slon.png",
    "default_popup": "popup.html"
  },
  
  "permissions": [
    "contextMenus",
    "storage",
    "*://*.pictshare.net/",
    "*://images.google.com/*",
    "*://google.com/*",
    "*://yandex.ru/*",
    "tabs",
    "activeTab",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["contextMenu.js"]
  },

  "web_accessible_resources": [
    "Images/icons/*.png"
  ],

  "icons": {  
    "16": "Images/icons/icon16.png",
    "48": "Images/icons/icon48.png",
    "128": "Images/icons/icon128.png" 
  }
}